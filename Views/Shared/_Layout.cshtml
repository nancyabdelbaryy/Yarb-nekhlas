<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MindCare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false) <!-- Added this line -->
    <style>
        :root {
            --primary-theme: #5D5FEF;
            --secondary-theme: #00B4D8;
        }

        body {
            background: url('https://images.unsplash.com/photo-1506126613408-eca07ce68773?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background: rgba(255,255,255,0.97) !important;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        }

        .nav-link {
            font-weight: 500;
            margin: 0 8px;
            color: #495057 !important;
            transition: all 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--primary-theme) !important;
                transform: translateY(-2px);
            }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-theme) !important;
        }

        .main-content {
            flex: 1;
            background: rgba(255,255,255,0.85);
            padding: 2rem 0;
        }

        .auth-buttons .btn {
            margin-left: 10px;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-brain me-2"></i>MindCare
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Therapists">
                                <i class="fas fa-user-md me-1"></i>Therapists
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-cog me-1"></i>Profile
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Profile">My Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Preferences">Preferences</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="auth-buttons">
                        <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Sign Up
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="bg-primary text-white py-4">
        <div class="container text-center">
            <p class="mb-0">
                <i class="fas fa-brain"></i> MindCare &copy; @DateTime.Now.Year
            </p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>