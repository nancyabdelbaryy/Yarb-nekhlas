@model mentalHealth.Models.User
@{
    ViewData["Title"] = "My Profile";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-user-circle me-2"></i>My Profile</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="https://ui-avatars.com/api/?name=@Model.Name&background=random"
                         class="rounded-circle mb-3" width="150">
                    <h4>@Model.Name</h4>
                    <p class="text-muted">@Model.Email</p>
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Account Type</dt>
                        <dd class="col-sm-8">@Model.Role.ToString()</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@(Model.Gender?.ToString() ?? "Not specified")</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Preferences" class="btn btn-primary me-2">
                            <i class="fas fa-sliders-h me-1"></i> Edit Preferences
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>